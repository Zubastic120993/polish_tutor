# Database Configuration
DATABASE_URL=sqlite:///./data/polish_tutor.db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Speech & AI Services
OPENAI_API_KEY=your-openai-api-key
MURF_API_KEY=your-murf-api-key-here

# Monitoring
TTS_MONITORING_INTERVAL=30
TTS_HEALTH_CHECK_TIMEOUT=10
TTS_METRICS_ENABLED=True

# Legacy Cloud TTS
# AZURE_SPEECH_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=your-azure-region

# Audio Settings
AUDIO_CACHE_DIR=./audio_cache
AUDIO_NATIVE_DIR=./frontend/static/audio/native
MAX_AUDIO_CACHE_SIZE_MB=500

# Session Settings
SESSION_DIR=./sessions/active
SESSION_HISTORY_DIR=./sessions/history
AUTO_SAVE_INTERVAL_SECONDS=30

# SRS Settings
SRS_INITIAL_EFACTOR=2.5
SRS_MAX_INTERVAL_DAYS=365
SRS_MIN_EFACTOR=1.3

# Logging
LOG_DIR=./logs
LOG_MAX_BYTES=10000000  # 10MB per file
LOG_BACKUP_COUNT=10
JSON_LOGGING=True
CONSOLE_LOGGING=True

# Monitoring
METRICS_ENABLED=True
PROMETHEUS_PORT=9090

# Development
RELOAD_ON_CHANGE=True
