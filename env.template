# Database Configuration
DATABASE_URL=sqlite:///./data/polish_tutor.db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Speech Services - TTS API Keys (Optional)
# Online TTS (Premium Quality)
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
MURF_API_KEY=your-murf-api-key-here

# Job Queue (Redis)
REDIS_URL=redis://localhost:6379

# Legacy Cloud TTS
# AZURE_SPEECH_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=your-azure-region

# Audio Settings
AUDIO_CACHE_DIR=./static/audio/cache
AUDIO_NATIVE_DIR=./static/audio/native
MAX_AUDIO_CACHE_SIZE_MB=500

# Session Settings
SESSION_DIR=./sessions/active
SESSION_HISTORY_DIR=./sessions/history
AUTO_SAVE_INTERVAL_SECONDS=30

# SRS Settings
SRS_INITIAL_EFACTOR=2.5
SRS_MAX_INTERVAL_DAYS=365
SRS_MIN_EFACTOR=1.3

# Logging
LOG_DIR=./logs
LOG_MAX_BYTES=1000000
LOG_BACKUP_COUNT=7

# Development
RELOAD_ON_CHANGE=True

