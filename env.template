# Database Configuration
DATABASE_URL=sqlite:///./data/polish_tutor.db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Speech Services - TTS API Keys (Optional)
# Online TTS (Premium Quality)
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
MURF_API_KEY=your-murf-api-key-here

# Job Queue (Redis)
REDIS_URL=redis://localhost:6379
REDIS_DB_QUEUE=0
REDIS_DB_DEDUP=1
REDIS_DB_CACHE=2

# Queue Worker Configuration
TTS_WORKER_COUNT=4
TTS_WORKER_TIMEOUT=600  # 10 minutes
TTS_JOB_TTL=86400       # 24 hours
TTS_JOB_RESULT_TTL=604800  # 7 days

# Queue Policies
TTS_MAX_RETRIES=3
TTS_RETRY_DELAY=60      # seconds base delay
TTS_RATE_LIMIT_PER_MINUTE=10
TTS_DEDUP_TTL=3600      # 1 hour deduplication window

# Priority Queues
TTS_HIGH_PRIORITY_WORKERS=2
TTS_BATCH_WORKERS=1
TTS_STANDARD_WORKERS=4

# Monitoring
TTS_MONITORING_INTERVAL=30
TTS_HEALTH_CHECK_TIMEOUT=10
TTS_METRICS_ENABLED=True

# Legacy Cloud TTS
# AZURE_SPEECH_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=your-azure-region

# Audio Settings
AUDIO_CACHE_DIR=./static/audio/cache
AUDIO_NATIVE_DIR=./static/audio/native
MAX_AUDIO_CACHE_SIZE_MB=500

# Session Settings
SESSION_DIR=./sessions/active
SESSION_HISTORY_DIR=./sessions/history
AUTO_SAVE_INTERVAL_SECONDS=30

# SRS Settings
SRS_INITIAL_EFACTOR=2.5
SRS_MAX_INTERVAL_DAYS=365
SRS_MIN_EFACTOR=1.3

# Logging
LOG_DIR=./logs
LOG_MAX_BYTES=10000000  # 10MB per file
LOG_BACKUP_COUNT=10
JSON_LOGGING=True
CONSOLE_LOGGING=True

# Monitoring
METRICS_ENABLED=True
PROMETHEUS_PORT=9090

# Development
RELOAD_ON_CHANGE=True

